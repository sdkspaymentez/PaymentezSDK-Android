<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextInputLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/bg_color_spinner_text" />

                <RelativeLayout
                    android:id="@+id/bg_color_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/bg_color_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:spinnerMode="dialog"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/bg_color_shower"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_above="@id/bg_color_bottom_line"/>

                    <TextView
                        android:layout_toRightOf="@id/bg_color_shower"
                        android:layout_toEndOf="@id/bg_color_shower"
                        android:id="@+id/bg_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="false"
                        android:hint="@string/bg_color_spinner_text"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:theme="@style/EditText" />

                    <ImageView
                        android:id="@+id/bg_color_drop_down"
                        android:layout_width="29dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/bg_color_bottom_line"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:focusable="false"
                        android:padding="10dp"
                        android:src="@drawable/drop_down_arrow"
                        app:tint="@color/gray_text" />

                    <View
                        android:id="@+id/bg_color_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/bg_color"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/gray_text" />

                </RelativeLayout>

                <TextView
                    style="@style/TextInputLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/text_color_spinner_text" />

                <RelativeLayout
                    android:id="@+id/text_color_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/text_color_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:spinnerMode="dialog"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/text_color_shower"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_above="@id/text_color_bottom_line"/>

                    <TextView
                        android:layout_toRightOf="@id/text_color_shower"
                        android:layout_toEndOf="@id/text_color_shower"
                        android:id="@+id/text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="false"
                        android:hint="@string/text_color_spinner_text"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:theme="@style/EditText" />

                    <ImageView
                        android:id="@+id/text_color_drop_down"
                        android:layout_width="29dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/text_color_bottom_line"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:focusable="false"
                        android:padding="10dp"
                        android:src="@drawable/drop_down_arrow"
                        app:tint="@color/gray_text" />

                    <View
                        android:id="@+id/text_color_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/text_color"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/gray_text" />

                </RelativeLayout>

                <TextView
                    style="@style/TextInputLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/button_color_spinner_text" />

                <RelativeLayout
                    android:id="@+id/button_color_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/button_color_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:spinnerMode="dialog"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/button_color_shower"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_above="@id/button_color_bottom_line"/>

                    <TextView
                        android:layout_toRightOf="@id/button_color_shower"
                        android:layout_toEndOf="@id/button_color_shower"
                        android:id="@+id/button_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="false"
                        android:hint="@string/button_color_spinner_text"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:theme="@style/EditText" />

                    <ImageView
                        android:id="@+id/button_color_drop_down"
                        android:layout_width="29dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/button_color_bottom_line"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:focusable="false"
                        android:padding="10dp"
                        android:src="@drawable/drop_down_arrow"
                        app:tint="@color/gray_text" />

                    <View
                        android:id="@+id/button_color_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/button_color"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/gray_text" />

                </RelativeLayout>

                <TextView
                    style="@style/TextInputLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/button_text_color_spinner_text" />

                <RelativeLayout
                    android:id="@+id/button_text_color_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/button_text_color_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:spinnerMode="dialog"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/button_text_color_shower"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_above="@id/button_text_color_bottom_line"/>

                    <TextView
                        android:layout_toRightOf="@id/button_text_color_shower"
                        android:layout_toEndOf="@id/button_text_color_shower"
                        android:id="@+id/button_text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="false"
                        android:hint="@string/button_color_spinner_text"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:theme="@style/EditText" />

                    <ImageView
                        android:id="@+id/button_text_color_drop_down"
                        android:layout_width="29dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/button_text_color_bottom_line"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:focusable="false"
                        android:padding="10dp"
                        android:src="@drawable/drop_down_arrow"
                        app:tint="@color/gray_text" />

                    <View
                        android:id="@+id/button_text_color_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/button_text_color"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/gray_text" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/randomize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/main_button_background"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:text="@string/randomize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/main_search_button"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/button_with_store_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/main_search_with_id_button"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/show_summary_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/main_show_summary_button"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/payment_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:text="@string/main_finish_payment"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/payment_skip_summary_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:paddingBottom="10dp"
                    android:text="@string/main_finish_payment_skip_summary"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/get_stores_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/main_get_stores"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/multi_payment_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_button_background"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/main_multi_payment_button"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>